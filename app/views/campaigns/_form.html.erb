<%= simple_form_for @campaign do |f| %>
<%= f.input :name, label: 'What is the name of the campaign?' %>
<%= f.input :GM, label: 'Who is the GM for this campaign?' %>
<%= f.input :active, label: 'Check this box to enable this campaign.' %>
<%= f.button :submit, "Done" , :class => "btn btn-primary" %>
<%= link_to 'Back', campaigns_path, :class => "btn" %>
<% end %>