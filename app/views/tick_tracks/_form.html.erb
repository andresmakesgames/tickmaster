<%= simple_form_for @tick_track do |f| %>
<%= f.input :name %>
<%= f.input :tick %>
<%= f.input :isPC %>
<% cookie_id = cookies[:campaign_id] %>
<% if cookie_id != nil %>
<%= f.input :campaign_id, collection: Campaign.where(:active => true), :selected => Integer(cookie_id) %>
<% else %>
<%= f.input :campaign_id, collection: Campaign.where(:active => true) %>
<% end %>
<%= f.button :submit %>
<% end %>